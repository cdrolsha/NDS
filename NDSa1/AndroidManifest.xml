<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.wildmansden.NDS"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <!-- Permission - Internet Connectivity -->
    <uses-permission android:name="android.permission.INTERNET" />
        
    <!-- Permission - Network State -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.wildmansden.NDS.NewsstandActivity"
            android:label="@string/app_name"
        	android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.wildmansden.NDS.NewsrackActivity"
            android:label="@string/app_name"
        	android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="net.wildmansden.NDS.PaperActivity"
            android:label="@string/app_name"
        	android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="net.wildmansden.NDS.StoryActivity"
            android:label="@string/app_name"
        	android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="net.wildmansden.NDS.SettingsActivity"
            android:label="@string/app_name"
        	android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="net.wildmansden.NDS.AddNewsrackActivity"
            android:label="@string/app_name"
        	android:theme="@style/AppTheme" >
        </activity>          
    </application>
        
</manifest>